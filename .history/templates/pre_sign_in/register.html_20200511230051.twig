{% extends 'base.html.twig' %}


{% block body %}



<div class="row">
    <div class="col-sm-2 my-auto"></div>
    <div class="col-sm-8 my-auto">
        <form action="{{ path('confirmWithoutRegister') }}" method="get" class="text-center border border-white p-5" >
            <p class="h2 mb-4">Already signed in but didn't confirm ?</p>

            <input class="form-control mb-4 form-control" type="text" name="email" placeholder="email">

            <input class="btn btn-success" type="submit" name="confirm" value="confirm">
        </form>
    </div>


</div>
    <div class="border-top my-3"><hr class="mt-2 mb-3"/></div>


    <div class="row">
        <div class="col-sm-2 my-auto"></div>
        <div class="col-sm-8 my-auto">
            <form class="text-center border border-white p-5" method="POST">
                {{ form_start(form) }}
                <p class="h2 mb-4">Sign up</p>
                    <div class="form-row mb-4">
                        <div class="col">
                            {{ form_row(form.firstName) }}
                        </div>
                        <div class="col">
                            {{ form_row(form.lastName) }}
                        </div>
                    </div>
                        {{ form_row(form.email) }}
                        {{ form_row(form.password) }}
                    <small id="defaultRegisterFormPasswordHelpBlock" class="form-text text-muted mb-4">
                        At least 8 characters 
                    </small>
                        {{form_row(form.confirmPassword)}}
                        {{ form_row(form.RegisterAs) }}
                {{ form_end(form) }}
            </form>
        </div>       
    <div class="col-sm-2 my-auto"></div>



</div>



{% endblock %}
