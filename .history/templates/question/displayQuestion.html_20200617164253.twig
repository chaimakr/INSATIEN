{% extends "StudentBase.html.twig" %}

{% block stylesheets %}
<link href="{{ asset('assetStudent/css/sb-admin-2.min.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container">
        <div class="panel panel-default widget">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-comment"></span>
                <div class="row justify-content-start align-items-center">
                    <fiv class="col-lg-9">
                        <h3 class="panel-title">
                            Questions </h3>
                    </fiv>
                {#<span class="label label-info">
                    {{ totalNumberOfQuestions }}</span>#}
                    <div class="col-lg-3">
                    <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" action="/student/class/{{ class.id }}/searchQuestions" method="POST">
                        <div class="input-group">
                          <input type="search" class="form-control bg-light border-2" placeholder="Search in questions..." aria-label="Search" aria-describedby="basic-addon2" name="search">
                          <div class="input-group-append">
                            <button class="btn btn-info" type="submit">
                              <i class="fas fa-search"></i>
                            </button>
                          </div>
                        </div>
                      </form>
                    </div>
                </div>  
            </div>
            <div class="panel-body">
                <ul class="list-group">
                    {% for question in questions %}
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-xs-2 col-md-1">
                                <img src="{% if app.user.pdpPath!="" %} /uploads/picture{{ app.user.id }}.jpg {% else %} //placehold.it/100 {% endif %} " alt="" height="80" width="80" class="img-profile rounded-circle">                            </div>
                            <div class="col-xs-10 col-md-11">
                                <div>
                                    <a href="#">{{ question.title }}</a>
                                    <div class="comment-text">
                                        {{ question.content }}
                                    </div>
                                    <div class="mic-info">
                                        <small>
                                            By: <a href="#">{{ question.owner.firstName }} {{ question.owner.lastName }}</a> {{ question.date|date('Y-m-d H:i:s') }}

                                        </small>
                                         </div>
                                </div>

                                <div class="action">
                                    <button type="button" class="btn btn-success btn-xs" title="Valid">
                                        <i class="fa fa-check"></i>
                                    </button>
                                    <button type="button" class="btn btn-danger btn-xs" title="Invalid">
                                        <i class="fa fa-times" aria-hidden="true"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </li>
                    <hr>
                    {% endfor %}
                </ul>
                {{ knp_pagination_render(questions) }}  

                {#<a href="#" class="btn btn-primary btn-sm btn-block" role="button"><span class="glyphicon glyphicon-refresh"></span> More</a>#}
            </div>
        </div>
</div>

{% endblock %}

{% block javascript %}
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
{% endblock %}