{%extends 'userBase.html.twig'%}
{% block stylesheets %}

{% endblock %}

{% block body %}

<section class="about_area section_gap">
        
        <div class="row justify-content-start align-items-center">
            <div class="col-lg-5">
                <div class="about_img">
                    <img class="" src="{{ asset('img/newsfeed2.svg') }}" height="500" width="600">
                </div>
            </div>
            <div class="offset-lg-1 col-lg-5">
            {% if covoiturages[0] is defined %}
                {% for i in 0..2 %}
                {% if covoiturages[i] is defined   %}

                    <div class="card border-left-info shadow h-100 py-2 mb-4">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    {#<div class="text-xs font-weight-bold text-info text-uppercase mb-1">covoiturage</div>#}
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                                            {%  if i==0 %}
                                            {{ covoiturages[i].owner.firstName}} is going to {{ covoiturages[i].arrivalPoint }} , they may take you along ..
                                            {% elseif i==1 %}

                                                Also {{ covoiturages[i].owner.firstName}} is heading to {{ covoiturages[i].arrivalPoint }} , check them ..
                                                {% elseif i==2 %}
                                                    {{ covoiturages[i].owner.firstName}} plans to go to {{ covoiturages[i].arrivalPoint }} , check their availability ..
                                            {% endif %}
                                        </div>
                                        </div>
                                    <div class="col-auto">
                                        <a href="/covoiturage/show"><i class="fa fa-car  fa-2x text-gray-300" aria-hidden="true"></i></a>  
                                    </div>
                                </div>
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
            </div>

                {% else %}
                <div class="offset-lg-1 col-lg-5">
                    <div class="text-center">
                        <h2 class="text-gray-500 mb-0">currently , there is no carpooling..</h2>
                    </div>
                </div>  
                {% endif %}
        </div>
    </section>


    <section class="about_area section_gap">
        
        <div class="row justify-content-start align-items-center">
            {% if questions[0] is defined %}
                <div class="offset-lg-1 col-lg-5">
                {% for i in 0..2%}
                    {% if questions[i] is defined %}

                    <div class="card border-left-warning shadow h-100 py-2 mb-4">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">

                                        {%  if i==0 %}
                                            {{ questions[i].owner.firstName}} added a question a while ago in the {{ questions[i].class.title }} class
                                        {% elseif i==1 %}
                                            you're good at {{ questions[i].class.title }} aren't you ? you might help {{ questions[i].owner.firstName}} ..
                                        {% elseif i==2 %}
                                            something is confusing {{ questions[i].owner.firstName}} at {{ questions[i].class.title }} , check his question ..
                                        {% endif %}


                                    </div>
                                        </div>
                                    <div class="col-auto">
                                       <a href="/user/class/{{questions[i].class.id}}/showAllQuestions"><i class="fas fa-comments fa-2x text-gray-300"></i></a>
                                    </div>
                                </div>
                            </div>
                    </div>
                    {% endif %}
                {% endfor %}

                    </div>



                {% else %}
                <div class="offset-lg-1 col-lg-5">
                    <div class="text-center">
                        <h2 class="text-gray-500 mb-0">currently , there is no questions..</h2>
                    </div>
                </div>  
                {% endif %}


                <div class="col-lg-5">
                    <div class="about_img">
                        <img class="" src="{{ asset('img/newsfeed1.svg') }}" height="500" width="600">
                    </div>
                </div>
        </div>
    </section>
<footer>
    <div class="info-color-dark text-center py-4">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-lg-12">
                    <h6 class="text-center text-uppercase font-weight-bold text-teal mx-3">
                    ALWAYS KEEPING YOU UPDATED .. </h6> <i class="fa fa-heart" aria-hidden="true"></i>
                </div>
            </div>
        </div>
    </div>
</footer>
{% endblock %}
 
{% block javascript %}

{% endblock %}