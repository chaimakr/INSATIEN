<section class="forms-section">
	<h1 class="section-title">hurry up and join us !</h1>
	<div class="forms">
		<div class="form-wrapper is-active">
			<button type="button" class="switcher switcher-login">
				Login
				<span class="underline"></span>
			</button>
			<form class="form form-login " method="post" action="/anon/login">
				<fieldset>
					<legend>Please, enter your email and password for login.</legend>
					<div class="input-block">
						<label for="login-email">E-mail</label>
						<input id="login-email" type="email" name="email" id="inputEmail" required>
					</div>
					<div class="input-block">
						<label for="login-password">Password</label>
						<input id="login-password" type="password" name="password" id="inputPassword" required>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					</div>
					<a class="small" href="/reset-password/forgottenPassword">Forgot Password?</a>
				</fieldset>
				<button class="btn" type="submit">Login</button>
			</form>
		</div>
		<div class="form-wrapper">
			<button type="button" class="switcher switcher-signup">
				Sign Up
				<span class="underline"></span>
			</button>
			<form class="form form-signup">
				<fieldset>

					{{ form_start(formRegister, {'attr' : {'novalidate' : 'novalidate' , 'autocomplete' : 'off'}}) }}
					<div
						class="row">
						<!-- First Name -->
						{{ form_errors(formRegister.firstName) }}
						<div class="input-group col-lg-6 mb-4">
							<div class="input-group-prepend">
								<span class="input-group-text bg-white px-4 border-md border-right-0">
									<i class="fa fa-user text-muted"></i>
								</span>
							</div>
							{{ form_widget(formRegister.firstName,{'attr':{
                            "class" :"form-control bg-white border-left-0 border-md",
                            "placeholder": "First name"
                        }}) }}
						</div>

						<!-- Last Name -->
						{{ form_errors(formRegister.lastName) }}
						<div class="input-group col-lg-6 mb-4">
							<div class="input-group-prepend">
								<span class="input-group-text bg-white px-4 border-md border-right-0">
									<i class="fa fa-user text-muted"></i>
								</span>
							</div>
							{{ form_widget(formRegister.lastName,{'attr':{
                            "class" : "form-control bg-white border-left-0 border-md",
                            "placeholder" : "Last name"
                        }}) }}
						</div>

						<!-- Email Address -->
						{{ form_errors(formRegister.email) }}
						<div class="input-group col-lg-12 mb-4">
							<div class="input-group-prepend">
								<span class="input-group-text bg-white px-4 border-md border-right-0">
									<i class="fa fa-envelope text-muted"></i>
								</span>
							</div>
							{{ form_widget(formRegister.email,{'attr':{
                            "class" : "form-control bg-white border-left-0 border-md",
                            "placeholder" :"example@insat.u-carthage.tn"
                        }}) }}
						</div>

						<!-- Password -->
						{{ form_errors(formRegister.password) }}
						<div class="input-group col-lg-12 mb-4">
							<div class="input-group-prepend">
								<span class="input-group-text bg-white px-4 border-md border-right-0">
									<i class="fa fa-lock text-muted"></i>
								</span>
							</div>
							{{ form_widget(formRegister.password,{'attr':{
                            "class" : "form-control bg-white border-left-0 border-md",
                            "placeholder" : "Password",
                            "aria-describedby" : "defaultRegisterFormPasswordHelpBlock"
                        }}) }}
						</div>

						<!-- Password Confirmation -->
						{{ form_errors(formRegister.confirmPassword) }}
						<div class="input-group col-lg-12 mb-4">
							<div class="input-group-prepend">
								<span class="input-group-text bg-white px-4 border-md border-right-0">
									<i class="fa fa-lock text-muted"></i>
								</span>
							</div>
							{{ form_widget(formRegister.confirmPassword,{'attr':{
                            "class" :"form-control bg-white border-left-0 border-md",
                            "placeholder" : "Confirm Password",
                            "aria-describedby" : "defaultRegisterFormPasswordHelpBlock"
                        }}) }}
						</div>
						<div class="input-group col-lg-12 mb-4">
							<div class="input-group-prepend">
								<span class="input-group-text bg-white px-4 border-md border-right-0">
									<i class="fa fa-black-tie text-muted"></i>
								</span>
							</div>
							{{form_widget(formRegister.RegisterAs,{'attr':{'class':"form-control custom-select bg-white border-left-0 border-md"}})}}
						</div>
						<!-- Submit Button -->
						<div class="form-group col-lg-12 mx-auto mb-0">
							{{ form_row(formRegister.register , {
                            'label': 'Create your account',
                            'attr':{
                                "class" : "nothing", "id" : "nothing"

                            }
                            })}}
						</div>
						<!-- Already Registered -->


					</div>
					{{ form_end(formRegister) }}

				</fieldset>
			</form>
		</div>
	</div>
</section>
<script>
	const switchers = [...document.querySelectorAll('.switcher')]

switchers.forEach(item => {
item.addEventListener('click', function () {
switchers.forEach(item => item.parentElement.classList.remove('is-active'))
this.parentElement.classList.add('is-active')
})
});
</script>
