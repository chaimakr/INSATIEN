{%extends 'userBase.html.twig'%}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">

{% endblock %}

{% block body %}

{{ form_start(formInvitation) }}
    <h2 class="fs-title">add your students  </h2>
    <h3 class="fs-subtitle">we will send them invitations to join your class <class></class></h3>

    <div class="ui fluid multiple search selection dropdown" id="selectStudents">


        {{ form_widget(formInvitation.students) }}
        <i class="dropdown icon"></i>
        <div class="default text">Select your students</div>
        <div class="menu">
            {% for student in students  %}

                <div class="item" data-value="{{ student.id }}">
                    <img class="img-profile rounded-circle" src="/uploads/picture{{ student.id }}.jpg">
                    {{ student.firstName }} {{ student.lastName }}
                </div>


            {% endfor %}


        </div>
    </div>


    {{ form_end(formInvitation) }}

{% endblock %}


{% block javascripts %}

    <script src="https://code.jquery.com/jquery-3.1.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>

    <script type="text/javascript">

        $('#selectStudents').dropdown()
        ;


    </script>
{% endblock %}

