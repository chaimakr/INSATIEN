    <link href="{{ asset('assetStudent/vendor/datatables/dataTables.bootstrap4.min.css') }}" rel="stylesheet">

{% endblock %}

{% block body %}



    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
            <tr>

                <th>Title</th>
                <th>Description</th>
                <th style="width: 20%"></th>


            </tr>
            </thead>
            <tbody>
            {% for class in classes %}
