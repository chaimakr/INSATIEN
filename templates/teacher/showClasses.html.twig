                <td>{{ class.title }}</td>
                <td>{{ class.description }}</td>
                <td style="width: 20%" ><a href="/teacher/modifyClass/{{ class.id }}"><i class="fas fa-cog"></i></a> </td>


            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>



{% endblock %}

{% block javascripts %}

    <!-- Page level plugins -->
    <script src="{{ asset('assetStudent/vendor/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assetStudent/vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>

    <!-- Page level custom scripts -->

    <script src="{{ asset('assetStudent/js/demo/datatables-demo.js') }}"></script>


{% endblock %}




